<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="50dp">

    <ImageButton
        android:id="@+id/talk_room_back_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="6dp"
        android:background="@null"
        android:src="@drawable/btn_check_off" />

    <RelativeLayout
        android:id="@+id/talk_room_right_btn"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="6dp">
        <!-- 背景セレクトボタン -->
        <ImageButton
            android:id="@+id/talk_room_select_bg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:background="@null"
            android:src="@drawable/btn_check_off" />


    </RelativeLayout>

    <!-- ルールダイアログボタン -->
    <ImageButton
        android:id="@+id/talk_room_terms"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="4dp"
        android:layout_toLeftOf="@id/talk_room_right_btn"
        android:background="@null"
        android:src="@drawable/btn_check_off" />
</RelativeLayout>


