<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <Button
        android:id="@+id/read_info_from_device"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Read Info From Device" />

    <Button
        android:id="@+id/test_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="logoin" />

    <Button
        android:id="@+id/executeOauth"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="executeOauth" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#abc"
        android:orientation="vertical"
        android:padding="5dp">

        <Button
            android:id="@+id/twitter_login_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:id="@+id/send_twitter_panel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <EditText
                android:id="@+id/twitter_message"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:hint="Make some message here!" />

            <ImageButton
                android:id="@+id/image_preview_area"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="#000"
                android:visibility="gone"
                tools:visibility="visible" />

            <Button
                android:id="@+id/twitter_image_choose"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Choose Picture" />

            <Button
                android:id="@+id/twitter_send_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Send To Twitter" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
